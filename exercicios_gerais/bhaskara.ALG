Algoritmo "bhaskara"

Var

   a, b, c, x1, x2, delta : real

Inicio

   escreva("Digite o valor de a: ")
   leia(a)
   escreva("Digite o valor de b: ")
   leia(b)
   escreva("Digite o valor de c: ")
   leia(c)
   
   delta <- Exp(b, 2) - 4 * a * c
   
   se delta < 0 entao
   
      escreva("Esta equação nào possui raízes reais.")
      
   senao

      x1 <- (- b + RaizQ(delta)) / (2 * a)
      x2 <- (- b - RaizQ(delta)) / (2 * a)
      
      escreval("X1 = ", x1:5:4)
      escreval("X2 = ", x2:5:4)
      
   fimse

Fimalgoritmo